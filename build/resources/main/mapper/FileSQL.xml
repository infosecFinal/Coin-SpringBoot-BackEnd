<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.rest.api.DAO.FileDAO">
    <sql id="FileColumns">
        id,board_id,file_name,origin_file_name,file_path,fileAvailable,content_type
    </sql>
    <update id="insertFile">
        <foreach collection="list" item="item" open="INSERT ALL" close="SELECT * FROM DUAL" separator=" ">
            into file_db(<include refid="FileColumns"/>) values(
            get_seq('file_id_seq'),
            ${board_idx},
            '${item.file_Name}',
            '${item.origin_file_Name}',
            '${item.file_Path}',
            'T',
            '${item.content_type}'
            )
        </foreach>
    </update>

    <select id="selectFile" resultType="com.rest.api.VO.FileVO">
        select * from file_db where fileAvailable='T' and board_id=${board_id}
    </select>

    <select id="selectFileById" resultType="com.rest.api.VO.FileVO">
        select * from file_db where fileAvailable='T' and id=${id}
    </select>

    <update id="deleteFile" parameterType="int">
        update file_db set fileAvailable='F' where id=${file_id}
    </update>


</mapper>